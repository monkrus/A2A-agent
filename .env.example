# API Keys
GOOGLE_API_KEY=your_google_api_key_here

# Server Configuration
HOST=0.0.0.0
PORT=8000
BASE_URL=http://localhost:8000

# Agent Configuration
AGENT_NAME=Business Consultant Agent (AP2)
AGENT_DESCRIPTION=Professional business consulting agent with AP2 payment protocol support
AGENT_VERSION=2.0.0
MERCHANT_ID=consulting-agent-merchant-001
PROVIDER_NAME=Your Company Name

# Security
API_KEY_HEADER=X-API-Key
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
RATE_LIMIT_PER_MINUTE=60

# Database (SQLite for development, PostgreSQL for production)
DATABASE_URL=sqlite:///./agent.db
# DATABASE_URL=postgresql://user:password@localhost/dbname

# Logging
LOG_LEVEL=INFO
LOG_FILE=agent.log

# Payment Configuration
DEFAULT_CURRENCY=USD
REFUND_PERIOD_DAYS=30
CART_EXPIRY_HOURS=1
INTENT_EXPIRY_HOURS=24

# Environment
ENVIRONMENT=development
DEBUG=false
